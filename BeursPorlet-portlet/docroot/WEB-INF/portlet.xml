<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>BeursPorlet</portlet-name>
		<display-name>BeursPorlet</display-name>
		 <portlet-class>
    		org.springframework.web.portlet.DispatcherPortlet
  		</portlet-class>
  		<init-param>
 			<name>contextConfigLocation</name>
			<value>/WEB-INF/modules/client/config-beurs-client.xml</value>
		</init-param>
		<init-param>
			<name>view-template</name>
			<value>/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>BeursPorlet</title>
			<short-title>BeursPorlet</short-title>
			<keywords>BeursPorlet</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>BeursPorlet-Admin</portlet-name>
		<display-name>BeursPorlet-Admin</display-name>
		 <portlet-class>
    		org.springframework.web.portlet.DispatcherPortlet
  		</portlet-class>
  		<init-param>
 			<name>contextConfigLocation</name>
			<value>/WEB-INF/modules/admin/config-beurs-admin.xml</value>
		</init-param>
		<init-param>
			<name>view-template</name>
			<value>/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>BeursPorlet-Admin</title>
			<short-title>BeursPorlet-Admin</short-title>
			<keywords>BeursPorlet-Admin</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	
		<portlet>
		<portlet-name>BeursPorlet-Tv</portlet-name>
		<display-name>BeursPorlet-Tv</display-name>
		 <portlet-class>
    		org.springframework.web.portlet.DispatcherPortlet
  		</portlet-class>
  		<init-param>
 			<name>contextConfigLocation</name>
			<value>/WEB-INF/modules/tv/config-beurs-tv.xml</value>
		</init-param>
		<init-param>
			<name>view-template</name>
			<value>/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>BeursPorlet-Tv</title>
			<short-title>BeursPorlet-Tv</short-title>
			<keywords>BeursPorlet-Tv</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	
</portlet-app>